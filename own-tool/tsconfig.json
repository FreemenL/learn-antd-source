{
    "compilerOptions": {
      "strictNullChecks": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "target": "es6",
      "lib": ["dom", "es7"]
    },
    "typeRoots": [
        "node",
        "node_modules/@types",
        "./typings"
    ],
    "exclude": ["node_modules", "lib", "es"]
}
  